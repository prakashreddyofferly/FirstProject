<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="409dp"
    android:layout_height="728dp"
    android:orientation="vertical"
    android:background="@drawable/bg_register"
    >
    <LinearLayout
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="20dp"
            android:paddingBottom="5dp"
            android:textFontWeight="700"/>
        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/ic_group_15796"/>
    </LinearLayout>
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="28dp"
        android:src="@drawable/ic_shopping_zone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <View
            android:layout_width="38dp"
            android:layout_height="1dp"
            android:layout_marginTop="1.8dp"
            android:background="@android:color/background_light" />
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="28.5dp">
            <EditText
                android:id="@+id/mobNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bord_register_inp"
                android:ems="25"
                android:hint="Email"
                android:textColor="#FFF"
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:paddingTop="22dp"
                android:paddingRight="10dp"
                android:paddingBottom="22dp"
                android:textColorHint="#FFFFFF"
                android:textSize="13dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="60dp">

            <EditText
                android:id="@+id/otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bord_register_inp_1"
                android:ems="21"
                android:hint="Mobile Number"
                android:inputType="number"
                android:textColor="#FFF"
                android:textSize="13dp"
                android:paddingLeft="20dp"
                android:paddingTop="22dp"
                android:paddingRight="10dp"
                android:paddingBottom="22dp"
                android:textColorHint="#FFFFFF"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="14dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Verify Number"
                android:layout_marginTop="10dp"
                android:textColor="#CCCC00"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="127dp"
            android:layout_marginLeft="28.5dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bord_register_inp_2"
                android:ems="25"
                android:paddingLeft="30dp"
                android:paddingTop="23dp"
                android:paddingBottom="23dp"
                android:hint="Enter OTP"
                android:textColorHint="#FFFFFF"
                android:inputType="number"
                android:textColor="#FFF"
                android:textSize="12dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="154dp"
            android:src="@drawable/ic_shopping_zone" />
        <View
            android:layout_width="35dp"
            android:layout_height="1dp"
            android:layout_marginTop="185.8dp"
            android:background="@android:color/background_light" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="205dp"
            android:buttonTint="#FFF"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:text="I Agree To Terms And Conditions"
            android:textColor="#FFF"
            android:textSize="10dp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="400dp"
            android:layout_gravity="center_horizontal"
            android:ems="8"
            android:text="Next"
            android:background="@drawable/reg_inp_1"
            android:textColor="#FFF"/>
    </RelativeLayout>
</LinearLayout>